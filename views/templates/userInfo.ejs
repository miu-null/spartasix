<div class="box-container">
  <div class="box image-info-box">
    <div class="image-box">
      <div class="member-photo">
        <img src="/img/01.png" alt="Member Photo">

      </div>
    </div>
    <div class="info-box">
      <h5> 회 원 정 보
        <button class="edit-box">수정</button>
      </h5>
      <div class="userBio_container">
        <%if(myInfo.userId.toString() === "1")  {%>
        <%= myInfo.password%>
        <% } %>
        <div>
          Name :&nbsp <%= myInfo.nickName %> <br>
          E-mail :&nbsp <%= myInfo.email %><br>
          <br><br>
          Social media :&nbsp<%= myInfo.snsURL %> http://instagram.com/minminminmin
        </div>
      </div>
    </div>
  </div>
  <div class="post-column">
    <button class="message-box" onclick="modal_open1(); selectApp('<%= myInfo.userId %>');">쪽지함</button>
    <div class="box post-box">
      <div class="userPosts_container">
        <div>
          <% for(let i = 0; i < myPosts.clubPosts.length; i++) {%>
          <p class="clubPost">
          <h5>제목 : <%=myPosts.clubPosts[i].title %></h5>
          <h5>내용 : <%= myPosts.clubPosts[i].content %></h5>
          </p>
          <% } %>
          <% for(let i = 0; i < myPosts.eventPosts.length; i++) {%>
          <p class="eventPost">
          <h5>제목 : <%=myPosts.eventPosts[i].title %></h5>
          <h5>내용 : <%= myPosts.eventPosts[i].content %></h5>
          </p>
          <% } %>



        </div>
      </div>
      <div class="post-column">
        <button class="message-box" onclick="modal_open1()">쪽지함</button>
