<div class="container club_container">
  <div>
    <a href="clubspost" class="new_club">+ new post</a>
    <div class="searchCount" id="searchCount">검색결과 : 총 <%= searchCount %>건</div>
  </div>
  <div class="club_table_container">
    <table class="table table-hover club_table">
      <thead id="club_thead">
        <tr>
            <th>Club</th>
            <th>제목</th>
            <th>작성자</th>
            <th>팀원구성</th>
            <th>작성일</th>
            <th>조회수</th>
            <th>좋아요</th>
        </tr>
      </thead>
      
      <tbody>
        <% if (slicedData.length) { %>
        <% slicedData.forEach(data => { %>
          <tr id="club_tr">
            <td id="club_Id"><a class="postLink" href='list/<%= data.id%>'><%= data.id %></a></td>
            <td id="club_Title"><a class="postLink" href='list/<%= data.id%>'><%= data.title %></a></td>
            <td id="club_Writer"><a class="postLink" href="/userpage/<%= data.userId %>"><%= data.user.nickName %></td>
            <td id="club_maxMember"><%= data.maxMembers %></td>
            <td id="club_Date"><%= reformPostDate(data.createdAt) %></td>
            <td id="club_View"><%= data.viewCount %></td>
            <td id="club_Likes"><%= data.Likes %></td>
          <% }) %>
          <% } else { %>
            <td id="club_Likes">검색 결과가 없습니다.</td>
            <% } %>
          </tr>            
      </tbody>
    </table>
  </div>
</div>
  
<!-- 페이지네이션 버튼 -->
<div id="pagination">
  <nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
      <% if (unitStart - 1> 0 ) { %>
        <li class="page-item">
          <a class="page-link" href="search?term=<%=term.term %>&page=<%= unitStart -1 %>" tabindex="-1"
            aria-disabled="true">이전</span>
          </a>
        </li>
        <% } %>
          <% for (let i=unitStart; i <= unitEnd; i++) { %>
            <% if (i <= lastPage) { %>
              <% if ( i===page) { %>
                <li class="page-item active" aria-current="page">
                  <span class="page-link">
                    <%= i %>
                  </span>
                </li>
                <% } else { %>
                  <li class="page-item"><a class="page-link" href="search?term=<%=term.term %>&page=<%= i %>">
                      <%= i %>
                    </a></li>
                  <% } %>
                    <% } %>
                      <% } %>
                        <% if (unitEnd <=lastPage) { %>
                          <li class="page-item">
                            <a class="page-link" href="search?term=<%=term.term %>&page=<%= unitEnd +1 %>">다음
                            </a>
                          </li>
                          <% } %> 
    </ul>
  </nav>
</div>

<section id="search" class="search-wrap">
  <form action="/club/search" class="search-form">
    <div class="col-10 col-lg-auto mb-3 mb-lg-0 me-lg-3">
    <input type="search" id="term" name="term" class="form-control" placeholder="🔍제목, 내용"
      aria-label="Search">
  </form>
</section>
  